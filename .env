# App Config
APP_NAME="Logistics Scanning API"
DEBUG=false
CORS_ORIGINS="*"

# Database (On Render, copy the Internal Connection String from your Postgres service)
DATABASE_URL=postgresql+asyncpg://user:password@hostname:5432/dbname
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (On Render, use your Redis Internal URL)
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=change-this-to-a-long-random-string-in-prod
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

